{
	"name": "@ultraq/promise-utils",
	"version": "0.8.0",
	"description": "A collection of utilities for JavaScript promises",
	"author": "Emanuel Rabina <emanuelrabina@gmail.com> (http://www.ultraq.net.nz/)",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/ultraq/promise-utils.git"
	},
	"keywords": [
		"promise",
		"utilities",
		"delay",
		"pad",
		"retry",
		"wait"
	],
	"module": "promise-utils.es.js",
	"main": "promise-utils.cjs.js",
	"types": "promise-utils.d.ts",
	"sideEffects": false,
	"scripts": {
		"lint": "eslint \"*.js\"",
		"test": "jest",
		"build": "npm run build:cjs && npm run build:es && npm run build:dts",
		"build:cjs": "cross-env BABEL_ENV=cjs babel promise-utils.js --out-file promise-utils.cjs.js --source-maps",
		"build:es": "cross-env BABEL_ENV=es babel promise-utils.js --out-file promise-utils.es.js --source-maps",
		"build:dts": "tsc --allowJs --declaration --emitDeclarationOnly promise-utils.js",
		"prepublishOnly": "npm run build"
	},
	"devDependencies": {
		"@babel/cli": "^7.20.7",
		"@babel/preset-env": "^7.20.2",
		"@types/jest": "^29.4.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.33.0",
		"eslint-config-ultraq": "^3.1.3",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jsdoc": "^46.9.1",
		"jest": "^29.4.2",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=18"
	}
}
